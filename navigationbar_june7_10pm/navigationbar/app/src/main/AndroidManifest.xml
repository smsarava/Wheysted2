<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.princ.navigationbar">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label=""
        android:theme="@style/Theme.Design.NoActionBar">
        <activity android:name=".MainActivity">
            android:label="@string/app_name"
            android:theme="@style/Theme.Designs.NoActionBar">
        </activity>
        <activity
            android:name=".FoodJournal"
            android:label="@string/title_activity_food_journal"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name=".History"
            android:label="History" />
        <activity
            android:name=".Recipes"
            android:label="Recipes"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/fb_id" />

        <activity android:name=".profileActivity" />
        <activity android:name=".BarcodeActivity"></activity>
    </application>

</manifest>